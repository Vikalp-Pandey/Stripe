{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "Nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["node"],
    "lib": ["ESNext"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "forceConsistentCasingInFileNames":true
  }
}
